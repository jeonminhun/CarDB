<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <!-- 대표 이미지 -->
        <ImageView
            android:id="@+id/detailMainImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:contentDescription="대표 이미지" />

        <!-- 썸네일 수평 스크롤 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="horizontal"
            android:importantForAccessibility="no"
            android:fadeScrollbars="false">

            <LinearLayout
                android:id="@+id/imageThumbnailContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" />
        </HorizontalScrollView>

        <!-- 차종 -->
        <TextView
            android:id="@+id/detailCarKind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="차종"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- 차번호 -->
        <TextView
            android:id="@+id/detailCarNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="차번호"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

        <!-- 날짜 -->
        <TextView
            android:id="@+id/detailDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

        <!-- 도장 코드 -->
        <TextView
            android:id="@+id/detailCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="도장 코드"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

        <!-- 특이사항 -->
        <TextView
            android:id="@+id/detailContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="특이사항"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
